set log syslog
set daemon 120
set httpd
    port 2812
    allow snw:"123"

set onreboot start

check process nginx with pidfile <%= shared_path %>/tmp/pids/nginx.pid
  group www
  start program = "<%= fetch(:bin_dir) %>/nginx -c <%= current_path %>/default.nginx" with timeout 60 seconds
  stop program = "<%= fetch(:bin_dir) %>/nginx -s quit"

check process unicorn_master with pidfile <%= shared_path %>/tmp/pids/unicorn.pid
  group www
  start program = "<%= shared_path %>/bin/unicorn --daemonize --env <%= fetch(:stage) %> --include <%= current_path %>/app --config-file <%= current_path %>/config/unicorn.rb"
  stop program = "/bin/kill -QUIT `cat <%= shared_path %>/tmp/pids/unicorn.pid`"

<% 1.upto(fetch(:unicorn_workers)).each do |index| %>
check process unicorn_worker_<%= index %> with pidfile <%= shared_path %>/tmp/pids/unicorn.<%= index %>.pid
  group www
  start program = "/bin/cat /dev/null"
  stop program = "<%= shared_path %>/bin/unicorn kill_worker <%= index %>"
<% end %>

check process postgresql with pidfile <%= shared_path %>/tmp/pids/postgresql.pid
  group database
  start program = "<%= fetch(:bin_dir) %>/pg_ctl -D /usr/local/var/postgres start" with timeout 60 seconds
  stop program = "<%= fetch(:bin_dir) %>/pg_ctl -D /usr/local/var/postgres stop"

check process rethinkdb with pidfile <%= shared_path %>/tmp/pids/rethinkdb.pid
  group database
  start program = "<%= fetch(:bin_dir) %>/rethinkdb --daemon --config-file <%= current_path %>/rethinkdb.conf" with timeout 60 seconds
  stop program = "/bin/kill -QUIT `cat <%= shared_path %>/tmp/pids/rethinkdb.pid`"

check process redis with pidfile <%= shared_path %>/tmp/pids/redis.pid
  group database
  start program = "<%= fetch(:bin_dir) %>/redis-server <%= current_path %>/redis.conf" with timeout 60 seconds
  stop program = "/bin/kill -QUIT `cat <%= shared_path %>/tmp/pids/redis.pid`"

check process elasticsearch with pidfile <%= shared_path %>/tmp/pids/elasticsearch.pid
  group database
  start program = "<%= fetch(:bin_dir) %>/elasticsearch -Epath.config=<%= shared_path %>/elasticsearch_data/config --daemonize --pidfile <%= shared_path %>/tmp/pids/elasticsearch.pid"
  stop program = "/bin/kill -SIGTERM `cat <%= shared_path %>/tmp/pids/elasticsearch.pid`"

<% 1.upto(fetch(:sidekiq_processes)).each do |index| %>
check process sidekiq_<%= index %> with pidfile <%= shared_path %>/tmp/pids/sidekiq_<%= index %>.pid
  group worker
  start program = "<%= shared_path %>/bin/sidekiq --daemon --environment <%= fetch(:stage) %> --require <%= current_path %>/config/application.rb --pidfile <%= shared_path %>/tmp/pids/sidekiq_<%= index %>.pid --logfile <%= shared_path %>/log/sidekiq_<%= index %>.log --concurrency 5"
  stop program = "/bin/kill -SIGTERM `cat <%= shared_path %>/tmp/pids/sidekiq_<%= index %>.pid`"
<% end %>

check process sidekiq_web with pidfile <%= shared_path %>/tmp/pids/sidekiq_web.pid
  group worker
  start program = "<%= shared_path %>/bin/rackup -o 0.0.0.0 -p 9090 -D -E <%= fetch(:stage) %> -P <%= shared_path %>/tmp/pids/sidekiq_web.pid <%= current_path %>/script/sidekiq_web.ru"
  stop program = "/bin/kill -SIGTERM `cat <%= shared_path %>/tmp/pids/sidekiq_web.pid`"
